<%= link_to 'All Events', root_path %>
<%= link_to 'Create New Event', new_event_path %>

<h1><%= @user.name %>'s Events:</h1>

<div>
  <h3>Created Events:</h3>
  <% @user.created_events.each do |event| %>
    <li><%= link_to event.title, event_path(event) %></li>
  <% end %>
</div>

<% future_attended = @user.attended_events.where('date >= ?', Date.today).order(:date) %>
<% past_attended = @user.attended_events.where('date < ?', Date.today).order(:date) %>

<div>
  <h3>Upcoming events to attend:</h3>
  <% future_attended.each do |event| %>
    <li><%= link_to event.title, event_path(event) %></li>
  <% end %>
</div>

<div>
  <h3>Past events attended:</h3>
  <% past_attended.each do |event| %>
    <li><%= link_to event.title, event_path(event) %></li>
  <% end %>
</div>